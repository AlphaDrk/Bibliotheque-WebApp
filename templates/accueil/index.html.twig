{# Tailwind-based homepage layout #}
{% extends 'base.html.twig' %}

{% block title %}Accueil - Bibliothèque{% endblock %}

{% block body %}
<!-- Navbar -->
<header class="sticky top-0 z-50 bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <div class="flex items-center space-x-6">
        <a href="{{ path('app_accueil') }}" class="text-lg font-semibold text-gray-800">Bibliotheque</a>
        <nav class="hidden md:flex space-x-4">
          <a href="{{ path('app_accueil') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md">Accueil</a>
          <a href="{{ path('app_editeur_index') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md">Éditeurs</a>
          <a href="{{ path('app_categorie_index') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md">Catégories</a>
          <a href="{{ path('app_livre_index') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md">Livres</a>
        </nav>
      </div>
      <div class="flex items-center">
        <a href="#" class="text-sm text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md">Connexion</a>
      </div>
    </div>
  </div>
</header>

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Section: Categories -->
  <section class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-semibold text-gray-800">Catégories</h2>
      <a href="{{ path('app_categorie_index') }}" class="text-sm text-gray-500 hover:text-gray-700">Voir tout ➡</a>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
      {% for categorie in categories %}
        <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="flex items-center justify-center rounded-md bg-white shadow-sm hover:shadow-lg transition p-3 text-sm font-medium text-gray-700">
          {{ categorie.nom }}
        </a>
      {% else %}
        <div class="text-gray-500">Aucune catégorie.</div>
      {% endfor %}
    </div>
  </section>

  <!-- Section: Éditeurs -->
  <section class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-semibold text-gray-800">Éditeurs</h2>
      <a href="{{ path('app_editeur_index') }}" class="text-sm text-gray-500 hover:text-gray-700">Voir tout ➡</a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {% for editeur in editeurs %}
        <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" class="flex items-center space-x-4 p-4 bg-white rounded-lg shadow hover:shadow-lg transition">
          <div class="w-12 h-12 rounded-md bg-gray-100 flex items-center justify-center text-xl font-bold text-gray-600">
            {{ editeur.nom[0]|upper }}
          </div>
          <div class="flex-1">
            <div class="text-sm font-medium text-gray-800">{{ editeur.nom }}</div>
            <div class="text-xs text-gray-500">{{ editeur.pays }}</div>
          </div>
        </a>
      {% else %}
        <div class="text-gray-500">Aucun éditeur.</div>
      {% endfor %}
    </div>
  </section>

  <!-- Section: Derniers Livres Ajoutés -->
  <section>
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-semibold text-gray-800">Derniers Livres Ajoutés</h2>
      <a href="{{ path('app_livre_index') }}" class="text-sm text-gray-500 hover:text-gray-700">Voir tout ➡</a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for livre in derniersLivres %}
        <div class="bg-white rounded-lg shadow hover:shadow-xl transition overflow-hidden">
          <div class="relative h-48 bg-gray-50 flex items-center justify-center">
            {# If you use VichUploader or store cover path, replace src accordingly #}
            {% if livre.cover is defined and livre.cover %}
              <img src="{{ livre.cover }}" alt="{{ livre.titre }}" class="object-cover w-full h-full" />
            {% else %}
              <div class="text-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6l4 2" />
                </svg>
              </div>
            {% endif %}
          </div>
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-800 truncate">{{ livre.titre }}</h3>
            {% if livre.auteurs|length > 0 %}
              <p class="text-sm text-gray-500 mt-1">{{ livre.auteurs|map(a => (a.prenom ~ ' ' ~ a.nom))|join(', ') }}</p>
            {% endif %}
            <div class="mt-4 flex items-center justify-between">
              <div class="text-indigo-600 font-semibold">{{ livre.pu|number_format(2, ',', ' ') }} €</div>
              <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="inline-block px-3 py-1 rounded-md bg-indigo-600 text-white text-sm hover:bg-indigo-700">Détail</a>
            </div>
          </div>
        </div>
      {% else %}
        <div class="text-gray-500">Aucun livre récent.</div>
      {% endfor %}
    </div>
  </section>
</main>

{% endblock %}