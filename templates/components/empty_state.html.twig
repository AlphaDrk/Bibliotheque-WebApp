<div class="text-center py-5">
    <div style="width: 100px; height: 100px; background: linear-gradient(135deg, {{ gradient_start|default('rgba(102, 126, 234, 0.1)') }}, {{ gradient_end|default('rgba(118, 75, 162, 0.1)') }}); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px;">
        <i class="bi {{ icon|default('bi-book') }}" style="font-size: 3rem; color: {{ icon_color|default('#667eea') }};"></i>
    </div>
    <h4 style="color: #1a1d2e; margin-bottom: 10px;">{{ title|default('Aucun élément trouvé') }}</h4>
    <p style="color: #8f9bb3; margin-bottom: 25px;">{{ message|default('Commencez par ajouter votre premier élément') }}</p>
    {% if action_url is defined %}
        <a href="{{ action_url }}" class="btn btn-gradient">
            {% if action_icon %}<i class="bi {{ action_icon }} me-2"></i>{% endif %}
            {{ action_text|default('Ajouter un élément') }}
        </a>
    {% endif %}
</div>
